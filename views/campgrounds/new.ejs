<% include ../partials/header %>
<div class="container">
<div class="jumbotron">
    <h1>Create a New CampGround</h1>
  </div>
   <div class="p-3">
   <form action="/campgrounds" method="POST" >
    <div class="form-group row p-3">
        <label for="name" class="col-sm-2 col-form-label">Campground Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name ="name" placeholder="Campground name" >
        </div>
    </div>
    <div class="form-group row p-3">
        <label for="Image-Url" class="col-sm-2 col-form-label">Image-url:</label>
        <div class="col-sm-10 ">
            <input type="text"  class="form-control" id="Image-Url" name ="image" placeholder="https://example/image.com">
        </div>
  </div>
  <div class="form-group row p-3">
        <label for="Image-Url" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-10 ">
            <input type="text"  class="form-control" id="description" name ="description" placeholder="Add description">
        </div>
  </div>

  <div class="text-center p-4">
      <button type="submit" class="btn btn-primary custom">Submit</button>
  </div>
  </form>
   <hr>
  </div>
 </div>
 <div class="container">
   <div class="m-5">
      <a  class="btn btn-outline-dark" href="/campgrounds">
        Back
      </a>
   </div>
  
 </div>
  



