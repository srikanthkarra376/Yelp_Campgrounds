<% include ../partials/header %>

<div class="container p-4">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info1</li>
        <li class="list-group-item">Info2</li>
        <li class="list-group-item">Info3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="img-thumbnail">
        <img class=" img-fluid" width="100%;"height="auto;" src="<%= campgrounds.image %>" >
        <div class="caption p-3">
           <h4> $10-night </h4>
        <h4><a href=""><%= campgrounds.name %></a></h4>
        </div>
        <p class="p-3"><%= campgrounds.description %></p>
      </div>
      <div class="p-5">
          <div class="text-right">
              <a  class="btn btn-success" href="/campgrounds/<%= campgrounds._id %>/comments/new">
                Add a New Comment
              </a>
         </div>
         <div>
            <% campgrounds.comments.forEach(function(comment){ %>
              <p><strong><%= comment.author %></strong>-<span><%= comment.text %></span><span class="blockquote-footer font-italic"><%= comment.Created.toDateString()%></span></p>
              <% });%>
         </div>
    </div>
    <div class="p-3">
      <a  class="btn btn-outline-dark" href="/campgrounds">
        Back
      </a>
    
  </div>
</div>

