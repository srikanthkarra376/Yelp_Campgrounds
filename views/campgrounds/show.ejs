<% include ../partials/header %>

<div class="container p-4">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info1</li>
        <li class="list-group-item">Info2</li>
        <li class="list-group-item">Info3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="img-thumbnail">
        <img class=" img-fluid" width="100%;"height="auto;" src="<%= campground.image %>" >
        <div class="caption p-3">
           <h4> $10-night </h4>
        <h4><a href=""><%= campground.name %></a></h4>
        
       <p class="p-3">Submited by-<i><strong><%= campground.author.username %></strong></i></p>
        </div>
        <p class="p-3"><%= campground.description %></p>
      </div>
  

      <div class="p-5">
          <div class="text-right">
              <a  class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">
                Add a New Comment
              </a>
         </div>
         <div>
            <% campground.comments.forEach(function(comment){ %>
              <p><strong><%= comment.author.username %></strong>-<span><%= comment.text %></span><span class="blockquote-footer font-italic"><%= comment.Created.toDateString()%></span></p>
              <% });%>
         </div>
    </div>
    <div class="p-3">
      <a  class="btn btn-outline-dark" href="/campgrounds">
        Back
      </a>
    
  </div>
</div>

