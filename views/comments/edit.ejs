<% include ../partials/header %>
<div class="container">
        <h1>Edit Comment</h1>
 <div class="p-3">
   <form method="POST" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT">
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label p-3">Comment:</label>
        <div class="col-sm-10 p-3">
            <input type="text" class="form-control" id="name" name ="comment[text]" value="<%= comment.text %>" >
        </div>
        <div class="form-group">
                <button type="submit" class="btn btn-success">Update Comment</button>
             </div>
      </div>
    
  </form>
  
  </div>
 </div>

  